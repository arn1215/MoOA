append head
  link(rel="stylesheet" href="/stylesheets/forms.css")

mixin validationErrorSummary(errors)
    if errors
        div.error-container
            p The following error(s) occurred:
            ul
                each error in errors
                    li= error


mixin field(labelText, fieldName, fieldValue, fieldType = 'text', placeholder = null)
  div.field-container
    label(for=fieldName)= labelText
    if fieldType === 'textarea'
      textarea(id=fieldName name=fieldName rows='5').form-input.textarea= fieldValue
    else
      input(type=fieldType id=fieldName name=fieldName value=fieldValue placeholder=placeholder).form-input
