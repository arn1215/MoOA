extends layout.pug
include utils.pug

append head
    link(rel="stylesheet" href="/stylesheets/forms.css")

block content
    div.outer-form-container
        h1= title
        +validationErrorSummary(errors)
        div.form-container
            form(action="/login", method="post").form-element
                input(type="hidden", name="_csrf", value=csrfToken)

                +field("Email", "email", email, 'email')

                +field("Password", "password", null, 'password')
                div.form-buttons
                    button(type="submit").btn.signUpButton.orange Login
                    a(href="/" class="form-cancel-button")
                        button(type="button").btn.signUpButton.cancel  Cancel
            .demo-user
                a(href="/demo-user").btn.signUpButton.demo
                    span.btn-text-demo Demo User