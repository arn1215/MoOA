extends layout.pug
include utils.pug

block content
    h1= title
    +validationErrorSummary(errors)
    form(action="/signup", method="post")
        input(type="hidden", name="_csrf", value=csrfToken)

        +field("First Name", "firstName", user.firstName, 'text')
        +field("Last Name", "lastName", user.lastName, 'text')
        +field("Username", "username", user.username, 'text')
        +field("Email", "email", user.email, 'email')
        +field("Password", "password", null, 'password')
        +field("Confirm Password", "confirmPassword", null, 'password')

        button(type="submit").btn Sign Up
        button(type="button").btn: a(href="/") Return
