extends layout.pug
include utils.pug


block content
    h1= title
    +validationErrorSummary(errors)
    form(action="/login", method="post")
        input(type="hidden", name="_csrf", value=csrfToken)

        +field("Email", "email", email, 'email')

        +field("Password", "password", null, 'password')

        button(type="submit").btn Login
